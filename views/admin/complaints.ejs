<%- include("../partials/header") -%>

<%-include("../partials/dash") -%>

<% if(!complaints.length){ %>
    <div class="dash-img">
      <img src="/img/clipboard.png" alt="">
      <h1>No Complaints Registered</h1>
    </div>
    <%}else{ %>
    <div class="table">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">S.No.</th>
            <th scope="col">Complaint Id.</th>
            <th scope="col">Date of Filing Complaint</th>
            <th scope="col">Name of Student</th>
            <th scope="col">Complaint Regarding</th>
            <th scope="col">Status</th>
            <th scope="col">View Complaint</th>
          </tr>
        </thead>
        <tbody>
            <% complaints.forEach((comp,index)=>{ %>
          <tr>
            <th scope="row"><%=index+1 %></th>
            <td><a href="complaints/<%=comp._id %>" class="font-semibold text-yellow-500"><%=comp._id%></a></td>
            <td><%= moment(comp.createdAt).format('hh:mm A') %></td>
            <td><%=comp.studentId.name %></td>
            <td><%=comp.complaintTitle %></td>
            <td class="font-bold text-red-400"><%=comp.status %></td>
            <td><a href="complaints/<%=comp._id %>" class="font-semibold text-yellow-500">View</a></td>
          </tr>
          <%}) %>
        </tbody>
      </table>
    </div>
    <% }%>


<%- include("../partials/footer") -%>
